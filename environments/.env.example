# =============================================
# FuelTune Streamlit - Environment Variables Template
# =============================================
# Copy this file and configure for your environment
# NEVER commit actual secrets to version control

# =============================================
# Application Configuration
# =============================================
APP_NAME="FuelTune Streamlit"
APP_VERSION="1.0.0"
APP_ENV="production"  # development, staging, production
DEBUG="false"
LOG_LEVEL="INFO"      # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================
# Server Configuration
# =============================================
STREAMLIT_SERVER_PORT="8503"
STREAMLIT_SERVER_ADDRESS="0.0.0.0"
STREAMLIT_SERVER_HEADLESS="true"
STREAMLIT_BROWSER_GATHER_USAGE_STATS="false"
STREAMLIT_THEME_BASE="light"
STREAMLIT_SERVER_MAX_UPLOAD_SIZE="50"
STREAMLIT_SERVER_MAX_MESSAGE_SIZE="200"
STREAMLIT_SERVER_ENABLE_CORS="false"
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION="true"

# =============================================
# Database Configuration
# =============================================
DATABASE_URL="postgresql://username:password@localhost:5432/fueltune_prod"
DB_POOL_SIZE="10"
DB_MAX_OVERFLOW="20"
DB_POOL_TIMEOUT="30"
DB_POOL_RECYCLE="3600"

# Individual database components (alternative to DATABASE_URL)
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="fueltune_prod"
DB_USER="fueltune"
DB_PASSWORD="your_secure_password_here"

# =============================================
# Redis Configuration
# =============================================
REDIS_URL="redis://localhost:6379/0"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB="0"
REDIS_PASSWORD=""  # Leave empty if no password
REDIS_MAX_CONNECTIONS="50"
REDIS_SOCKET_TIMEOUT="5"

# =============================================
# Data Processing Configuration
# =============================================
MAX_FILE_SIZE="50MB"
ALLOWED_EXTENSIONS="csv,xlsx,xls"
FUELTECH_FIELDS_COUNT="64"
CACHE_EXPIRY_HOURS="24"

# =============================================
# Security Configuration
# =============================================
SECRET_KEY="your_secret_key_here_minimum_32_characters"
JWT_SECRET_KEY="your_jwt_secret_key_here"
ENCRYPTION_KEY="your_encryption_key_here"

# Session configuration
SESSION_COOKIE_SECURE="true"  # Set to false for development
SESSION_COOKIE_HTTPONLY="true"
SESSION_COOKIE_SAMESITE="Strict"

# CSRF protection
CSRF_ENABLED="true"
CSRF_TIME_LIMIT="3600"

# =============================================
# File Storage Configuration
# =============================================
STORAGE_TYPE="local"  # local, s3, gcs
UPLOAD_FOLDER="data/uploads"
PROCESSED_FOLDER="data/processed"
BACKUP_FOLDER="data/backups"

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_DEFAULT_REGION="us-west-2"
S3_BUCKET_NAME=""
S3_ENDPOINT_URL=""  # For S3-compatible services

# Google Cloud Storage Configuration (if using GCS)
GOOGLE_APPLICATION_CREDENTIALS=""  # Path to service account key file
GCS_BUCKET_NAME=""

# =============================================
# Monitoring and Observability
# =============================================
METRICS_ENABLED="true"
METRICS_PORT="8503"
METRICS_PATH="/metrics"
HEALTH_CHECK_PATH="/_stcore/health"

# OpenTelemetry Configuration
OTEL_ENABLED="false"
OTEL_SERVICE_NAME="fueltune-streamlit"
OTEL_EXPORTER_OTLP_ENDPOINT=""
OTEL_EXPORTER_OTLP_HEADERS=""

# Sentry Configuration (Error Tracking)
SENTRY_DSN=""
SENTRY_ENVIRONMENT=""
SENTRY_RELEASE=""

# =============================================
# Logging Configuration
# =============================================
LOG_FORMAT="json"     # json, text
LOG_DATEFORMAT="%Y-%m-%d %H:%M:%S"
LOG_MAX_BYTES="10485760"  # 10MB
LOG_BACKUP_COUNT="5"
LOG_FILE="logs/fueltune.log"

# External logging
PAPERTRAIL_HOST=""
PAPERTRAIL_PORT=""
ELASTICSEARCH_URL=""
FLUENTD_HOST=""
FLUENTD_PORT=""

# =============================================
# Email Configuration
# =============================================
SMTP_SERVER="localhost"
SMTP_PORT="587"
SMTP_USE_TLS="true"
SMTP_USERNAME=""
SMTP_PASSWORD=""
MAIL_FROM="noreply@fueltune.com"
MAIL_ADMIN=""

# =============================================
# Notification Configuration
# =============================================
# Slack
SLACK_WEBHOOK_URL=""
SLACK_CHANNEL="#fueltune-alerts"
SLACK_USERNAME="FuelTune Bot"

# Microsoft Teams
TEAMS_WEBHOOK_URL=""

# Discord
DISCORD_WEBHOOK_URL=""

# PagerDuty
PAGERDUTY_INTEGRATION_KEY=""

# =============================================
# External API Configuration
# =============================================
# Add any external API keys or endpoints here
EXTERNAL_API_KEY=""
EXTERNAL_API_URL=""
EXTERNAL_API_TIMEOUT="30"

# Third-party service URLs
ANALYTICS_API_URL=""
ANALYTICS_API_KEY=""

# =============================================
# Rate Limiting Configuration
# =============================================
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_PER_MINUTE="100"
RATE_LIMIT_PER_HOUR="1000"
RATE_LIMIT_PER_DAY="10000"

# =============================================
# Backup Configuration
# =============================================
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"
BACKUP_COMPRESSION="gzip"

# =============================================
# Feature Flags
# =============================================
FEATURE_ADVANCED_ANALYTICS="true"
FEATURE_EXPORT_DATA="true"
FEATURE_REAL_TIME_MONITORING="false"
FEATURE_BETA_UI="false"

# =============================================
# Performance Configuration
# =============================================
WORKER_PROCESSES="auto"  # auto, or number
WORKER_TIMEOUT="30"
KEEP_ALIVE="2"
MAX_REQUESTS="1000"
MAX_REQUESTS_JITTER="50"

# Connection pool settings
CONNECTION_POOL_SIZE="20"
CONNECTION_POOL_OVERFLOW="10"
CONNECTION_POOL_TIMEOUT="30"

# =============================================
# Development Settings (Development Only)
# =============================================
# These should be set to secure values in production

# Development database (SQLite for quick setup)
DEV_DATABASE_URL="sqlite:///dev_fueltune.db"

# Development credentials (INSECURE - for development only)
DEV_ADMIN_USERNAME="admin"
DEV_ADMIN_PASSWORD="dev_password_123"

# Hot reload and debugging
HOT_RELOAD="false"  # Set to true only in development
PROFILING_ENABLED="false"  # Set to true only in development

# =============================================
# Kubernetes Specific Configuration
# =============================================
# These are typically set by Kubernetes itself

# Pod information (set by Kubernetes downward API)
POD_NAME=""
POD_NAMESPACE=""
POD_IP=""
NODE_NAME=""

# Service discovery
KUBERNETES_SERVICE_HOST=""
KUBERNETES_SERVICE_PORT=""

# =============================================
# Cloud Provider Specific Configuration
# =============================================

# AWS Configuration
AWS_REGION="us-west-2"
AWS_EKS_CLUSTER_NAME=""
AWS_ACCOUNT_ID=""

# Azure Configuration
AZURE_SUBSCRIPTION_ID=""
AZURE_RESOURCE_GROUP=""
AZURE_AKS_CLUSTER_NAME=""

# Google Cloud Configuration
GCP_PROJECT_ID=""
GCP_REGION="us-west1"
GKE_CLUSTER_NAME=""

# =============================================
# Compliance and Security
# =============================================
GDPR_COMPLIANCE="true"
DATA_RETENTION_DAYS="365"
AUDIT_LOGGING="true"
ENCRYPTION_AT_REST="true"
ENCRYPTION_IN_TRANSIT="true"

# =============================================
# Custom Configuration
# =============================================
# Add any application-specific configuration here

# FuelTech specific settings
FUELTECH_API_ENDPOINT=""
FUELTECH_API_KEY=""
FUELTECH_DEFAULT_SAMPLE_RATE="100"

# Analysis settings
DEFAULT_ANALYSIS_WINDOW="300"  # seconds
MAX_ANALYSIS_RECORDS="100000"
ENABLE_PREDICTIVE_ANALYSIS="false"

# UI customization
CUSTOM_THEME_URL=""
CUSTOM_LOGO_URL=""
COMPANY_NAME=""
SUPPORT_EMAIL=""
