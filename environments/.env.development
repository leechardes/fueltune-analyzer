# =============================================
# FuelTune Streamlit - Development Environment
# =============================================
# Configuration for local development

# =============================================
# Application Configuration
# =============================================
APP_NAME="FuelTune Streamlit (Dev)"
APP_VERSION="dev"
APP_ENV="development"
DEBUG="true"
LOG_LEVEL="DEBUG"

# =============================================
# Server Configuration
# =============================================
STREAMLIT_SERVER_PORT="8503"
STREAMLIT_SERVER_ADDRESS="localhost"
STREAMLIT_SERVER_HEADLESS="false"
STREAMLIT_BROWSER_GATHER_USAGE_STATS="false"
STREAMLIT_THEME_BASE="light"
STREAMLIT_SERVER_MAX_UPLOAD_SIZE="50"
STREAMLIT_SERVER_MAX_MESSAGE_SIZE="200"
STREAMLIT_SERVER_ENABLE_CORS="true"
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION="false"

# =============================================
# Database Configuration (Local SQLite)
# =============================================
DATABASE_URL="sqlite:///dev_fueltune.db"
DB_POOL_SIZE="5"
DB_MAX_OVERFLOW="10"
DB_POOL_TIMEOUT="30"
DB_POOL_RECYCLE="3600"

# =============================================
# Redis Configuration (Local)
# =============================================
REDIS_URL="redis://localhost:6379/0"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB="0"
REDIS_PASSWORD=""
REDIS_MAX_CONNECTIONS="10"
REDIS_SOCKET_TIMEOUT="5"

# =============================================
# Data Processing Configuration
# =============================================
MAX_FILE_SIZE="10MB"
ALLOWED_EXTENSIONS="csv,xlsx,xls"
FUELTECH_FIELDS_COUNT="64"
CACHE_EXPIRY_HOURS="1"  # Shorter cache for development

# =============================================
# Security Configuration (Development)
# =============================================
SECRET_KEY="dev_secret_key_not_for_production_use"
JWT_SECRET_KEY="dev_jwt_secret_key_not_for_production"
ENCRYPTION_KEY="dev_encryption_key_not_for_production"

# Relaxed security for development
SESSION_COOKIE_SECURE="false"
SESSION_COOKIE_HTTPONLY="true"
SESSION_COOKIE_SAMESITE="Lax"

CSRF_ENABLED="false"
CSRF_TIME_LIMIT="3600"

# =============================================
# File Storage Configuration
# =============================================
STORAGE_TYPE="local"
UPLOAD_FOLDER="data/uploads"
PROCESSED_FOLDER="data/processed"
BACKUP_FOLDER="data/backups"

# =============================================
# Monitoring and Observability
# =============================================
METRICS_ENABLED="true"
METRICS_PORT="8503"
METRICS_PATH="/metrics"
HEALTH_CHECK_PATH="/_stcore/health"

# Disabled for development
OTEL_ENABLED="false"
SENTRY_DSN=""

# =============================================
# Logging Configuration
# =============================================
LOG_FORMAT="text"  # More readable for development
LOG_DATEFORMAT="%Y-%m-%d %H:%M:%S"
LOG_MAX_BYTES="5242880"  # 5MB
LOG_BACKUP_COUNT="3"
LOG_FILE="logs/fueltune_dev.log"

# =============================================
# Email Configuration (Development)
# =============================================
SMTP_SERVER="localhost"
SMTP_PORT="1025"  # MailHog or similar dev mail server
SMTP_USE_TLS="false"
SMTP_USERNAME=""
SMTP_PASSWORD=""
MAIL_FROM="dev@fueltune.local"
MAIL_ADMIN="admin@fueltune.local"

# =============================================
# Notification Configuration (Disabled)
# =============================================
SLACK_WEBHOOK_URL=""
TEAMS_WEBHOOK_URL=""
DISCORD_WEBHOOK_URL=""
PAGERDUTY_INTEGRATION_KEY=""

# =============================================
# Rate Limiting Configuration (Relaxed)
# =============================================
RATE_LIMIT_ENABLED="false"
RATE_LIMIT_PER_MINUTE="1000"
RATE_LIMIT_PER_HOUR="10000"
RATE_LIMIT_PER_DAY="100000"

# =============================================
# Backup Configuration
# =============================================
BACKUP_ENABLED="false"  # Disabled for development
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="7"
BACKUP_COMPRESSION="gzip"

# =============================================
# Feature Flags (Development)
# =============================================
FEATURE_ADVANCED_ANALYTICS="true"
FEATURE_EXPORT_DATA="true"
FEATURE_REAL_TIME_MONITORING="true"
FEATURE_BETA_UI="true"  # Enable beta features in development

# =============================================
# Performance Configuration
# =============================================
WORKER_PROCESSES="1"
WORKER_TIMEOUT="60"  # Longer timeout for debugging
KEEP_ALIVE="2"
MAX_REQUESTS="100"
MAX_REQUESTS_JITTER="10"

# =============================================
# Development Specific Settings
# =============================================
HOT_RELOAD="true"
PROFILING_ENABLED="true"
DEV_ADMIN_USERNAME="admin"
DEV_ADMIN_PASSWORD="dev123"

# =============================================
# Docker Development Configuration
# =============================================
# Override for docker-compose development
POSTGRES_HOST="postgres-dev"
POSTGRES_PORT="5432"
POSTGRES_DB="fueltune_dev"
POSTGRES_USER="fueltune"
POSTGRES_PASSWORD="dev_password"

REDIS_HOST="redis-cache"
REDIS_PORT="6379"

# =============================================
# Testing Configuration
# =============================================
TESTING="false"
TEST_DATABASE_URL="sqlite:///test_fueltune.db"

# =============================================
# Custom Development Configuration
# =============================================
FUELTECH_API_ENDPOINT="https://api-dev.fueltech.com"
FUELTECH_API_KEY="dev_api_key"
FUELTECH_DEFAULT_SAMPLE_RATE="10"

DEFAULT_ANALYSIS_WINDOW="60"
MAX_ANALYSIS_RECORDS="10000"
ENABLE_PREDICTIVE_ANALYSIS="true"

# UI Development
CUSTOM_THEME_URL=""
CUSTOM_LOGO_URL=""
COMPANY_NAME="FuelTune Development"
SUPPORT_EMAIL="dev@fueltune.local"
